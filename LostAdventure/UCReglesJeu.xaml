<UserControl x:Class="LostAdventure.UCReglesJeu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LostAdventure"
        mc:Ignorable="d"
        d:DesignHeight="900" d:DesignWidth="1600">

	<Grid>
		<Image HorizontalAlignment="Center" Height="1000" VerticalAlignment="Center" Width="1000" Source="/Img/ReglesMenu/MenuRegles.png"/>

		<Button x:Name="butQuitterRegles"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="550,0,0,500"
                Width="100" Height="100"
                Click="butQuitterRegles_Click">
			<Button.Background>
				<ImageBrush ImageSource="/Img/ReglesMenu/CroixMenuRegles.png"/>
			</Button.Background>
		</Button>


		<TextBlock Text="Lost Adventure est un jeu &#10; d'aventure dans lequel &#10;vous incarnez un chevalier &#10;explorant des ruines perdues. &#10;Vous devez parcourir ces &#10;ruines, franchir des obstacles,&#10;et vaincre des ennemies. &#10; Une surprise vous &#10; attend au bout des ruines ..."
                FontFamily="{StaticResource PressStart2P}"
                FontSize="36"
                Foreground="White"
                TextAlignment="Center" Margin="502,269,518,240"
                />

	</Grid>
</UserControl>

