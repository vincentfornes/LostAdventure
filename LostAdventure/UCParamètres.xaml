<UserControl x:Class="LostAdventure.UCParamètres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LostAdventure"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    
    
    <Grid>
        <Label Content="Volume du son :" HorizontalAlignment="Left" Margin="20,130,0,0" VerticalAlignment="Top" FontSize="13" FontFamily="Police\#Press Start 2P" Foreground="White" />

        <StackPanel Margin="-10,0,10,0">
            <Slider x:Name="slidSon" Width="350" Height="25" Minimum="1"
     Maximum="100"
     Value="50"
     TickFrequency="1"
     IsSnapToTickEnabled="True"
     HorizontalAlignment="Center" Margin="20,132,0,293"/>
        </StackPanel>
        <Button x:Name="" Content="Agrandir/Rétrécir Fenêtre" HorizontalAlignment="Left" Margin="300,285,0,0" VerticalAlignment="Top"/>


    </Grid>
</UserControl>
