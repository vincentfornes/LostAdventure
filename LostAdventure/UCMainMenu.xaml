<Window x:Class="LostAdventure.UCMainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LostAdventure"
        mc:Ignorable="d"
        Title="UCMainMenu" Height="900" Width="1600">
    <Grid>

        <Button x:Name="butJouer"  HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" Height="100" Width="480" Click="butJouer_Click">
