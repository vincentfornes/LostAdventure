        <Button x:Name="butQuitter"  HorizontalAlignment="Center" Margin="0,560,0,0" VerticalAlignment="Top" Height="100" Width="480" Click="butQuitter_Click" >
            <Image Source="/Img/butQuitter.png" Stretch="Fill"></Image> </Button>

    </Grid>
</Window>
