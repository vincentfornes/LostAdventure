<UserControl x:Class="LostAdventure.UCStatueMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LostAdventure"
        mc:Ignorable="d"
        d:DesignHeight="900" d:DesignWidth="1600">
	<Grid>

		<Button x:Name="butSoin" Content="" HorizontalAlignment="Left" Height="250" Width="300" Margin="200,51,0,0" VerticalAlignment="Top" Click="butSoin_Click">
			<Button.Background>
				<ImageBrush ImageSource="/Img/Statue/butSoigner.png"/>
			</Button.Background>
		</Button>
		<Button x:Name="butShop" Content="" HorizontalAlignment="Left" Height="250" Width="300" Margin="200,301,0,0" VerticalAlignment="Top" Click="butShop_Click">
			<Button.Background>
				<ImageBrush ImageSource="/Img/Statue/butBoutique.png"/>
			</Button.Background>
		</Button>
		<Button x:Name="butPartir" Content="" HorizontalAlignment="Left" Height="250" Width="300" Margin="200,556,0,0" VerticalAlignment="Top" Click="butPartir_Click">
			<Button.Background>
				<ImageBrush ImageSource="/Img/Statue/butPartir.png"/>
			</Button.Background>
		</Button>
		<Image HorizontalAlignment="Left" Height="1000" Margin="1100,140,0,0" VerticalAlignment="Top" Width="500" Source="/Img/Statue/Statue.png"/>

	</Grid>
</UserControl>
