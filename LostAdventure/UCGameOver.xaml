<UserControl x:Class="LostAdventure.UCGameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignHeight="900" d:DesignWidth="1600">
	<Grid Background="#AA000000">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="GAME OVER"
			           Foreground="Red"
			           FontSize="80"
			           FontWeight="Bold"
                       FontFamily="***/Police/PressStart2P-Regular.ttf#Press Start 2P**"
			           HorizontalAlignment="Center"
			           Margin="0,0,0,50"/>

			<Button x:Name="butRestart"
			        Content="RESTART"
			        Width="300"
			        Height="80"
			        FontSize="30"
			        FontWeight="Bold"
			        Margin="0,20"
			        Click="butRestart_Click"
			        Background="#FF4444"
			        Foreground="White"/>

			<Button x:Name="butLeave"
			        Content="MAIN MENU"
			        Width="300"
			        Height="80"
			        FontSize="30"
			        FontWeight="Bold"
			        Margin="0,20"
			        Click="butLeave_Click"
			        Background="#444444"
			        Foreground="White"/>
		</StackPanel>
	</Grid>
</UserControl>
