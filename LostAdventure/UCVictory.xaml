<UserControl x:Class="LostAdventure.UCVictory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignHeight="900" d:DesignWidth="1600">
    <Grid Background="#AA000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="182*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,34,0,0" Grid.Row="1">
            <TextBlock Text="VICTOIRE!"
			           Foreground="Gold"
			           FontSize="100"
			           FontWeight="Bold"
                       FontFamily="Police\#Press Start 2P"
			           HorizontalAlignment="Center"
			           Margin="0,0,0,30"/>

            <TextBlock Text="Vous avez battu le dragon et trouve le tresor!"
			           Foreground="White"
			           FontSize="30"
                       FontFamily="Police\#Press Start 2P"
			           HorizontalAlignment="Center"
			           Margin="0,0,0,50" Height="68"/>

            <Button x:Name="butRestart"
			        Content="REJOUER"
			        Width="300"
			        Height="80"
			        FontSize="30"
			        FontWeight="Bold"
                    FontFamily="Police\#Press Start 2P"
			        Margin="0,20"
			        Click="butRestart_Click"
			        Background="#FFD700"
			        Foreground="Black"/>

            <Button x:Name="butLeave"
			        Content="MENU"
			        Width="300"
			        Height="80"
			        FontSize="30"
			        FontWeight="Bold"
                    FontFamily="Police\#Press Start 2P"
			        Margin="0,20"
			        Click="butLeave_Click"
			        Background="#444444"
			        Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
