<Window x:Class="LostAdventure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LostAdventure"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="/Img/1Entree.png"></ImageBrush>
        </Canvas.Background>
        <Image x:Name="Aventurier1" Source="/Img/Aventurier/Aventurier1.gif" Canvas.Left="282" Canvas.Top="510" ></Image>
        <Button x:Name="butJouer"  HorizontalAlignment="Center" Margin="500,240,0,0" VerticalAlignment="Top" Height="100" Width="480" Click="butJouer_Click">
            <Image Source="/Img/butJouer.png" Stretch="Fill" />
        </Button>
        <Button x:Name="butTouches"  HorizontalAlignment="Center" Margin="500,400,0,0" VerticalAlignment="Top" Height="100" Width="480" Click="butTouches_Click" >
            <Image Source="/Img/butTouches.png" Stretch="Fill"></Image>
        </Button>
        <Button x:Name="butQuitter"  HorizontalAlignment="Center" Margin="500,560,0,0" VerticalAlignment="Top" Height="100" Width="480" Click="butQuitter_Click" >
            <Image Source="/Img/butQuitter.png" Stretch="Fill"></Image>
        </Button>
    </Canvas>
</Window>
